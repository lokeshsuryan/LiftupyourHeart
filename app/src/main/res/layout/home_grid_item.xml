<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/common_130_dp"
    android:layout_height="@dimen/common_120_dp">
    <LinearLayout
        android:id="@+id/parentLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imgAction"
        android:layout_width="@dimen/common_30_dp"
        android:layout_height="@dimen/common_30_dp"
        android:layout_marginTop="@dimen/common_20_dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/img_0"/>
        <com.example.custom.CustomTextViewBold
            android:id="@+id/nameAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_5_dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/h16"
            android:textColor="@color/white"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>